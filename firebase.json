{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "server",
    "runtime": "nodejs20"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "port": 5005
    },
    "storage": {
      "port": 9199,
      "rules": "storage.rules"
    },
    "functions": {
      "port": 5001,
      "runtime": "nodejs20"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}